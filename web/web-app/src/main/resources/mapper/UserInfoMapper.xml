<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.app.mapper.UserInfoMapper">

    <select id="selectOneByAccount" resultType="com.atguigu.lease.model.entity.UserInfo">
        select id,
               phone,
               email,
               password,
               avatar_url,
               nickname,
               status,
               create_time,
               update_time,
               is_deleted
        from user_info
        where is_deleted = 0
          and (email = #{account} or phone = #{account})
    </select>
</mapper>
